# Configuration pour les backups de production
# Renommez ce fichier en backup_config.env et remplissez les valeurs

# Configuration Base de Donn√©es PostgreSQL Production
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=atlas_production
DB_USER=atlas_user
DB_PASSWORD=your_production_db_password

# Configuration DigitalOcean Spaces
DIGITALOCEAN_SPACES_KEY=your_spaces_access_key
DIGITALOCEAN_SPACES_SECRET=your_spaces_secret_key
DIGITALOCEAN_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DIGITALOCEAN_SPACES_BUCKET=your_bucket_name

# Configuration optionnelle
BACKUP_RETENTION_DAYS=30
LOG_LEVEL=INFO