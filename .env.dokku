# Variables d'environnement pour Dokku
# Copier ces commandes sur le serveur après création de l'app

# Configuration Flask
dokku config:set atlas FLASK_ENV=production
dokku config:set atlas PORT=5000

# Clé secrète (REMPLACER par une vraie clé)
dokku config:set atlas SECRET_KEY="GENERER-UNE-CLE-SECRETE-LONGUE-ET-COMPLEXE-ICI"

# Database URL sera automatiquement configurée par dokku postgres:link

# Configuration optionnelle
dokku config:set atlas PYTHONUNBUFFERED=1
dokku config:set atlas PYTHONDONTWRITEBYTECODE=1